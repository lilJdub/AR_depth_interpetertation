<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/surf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.ar.core.examples.java.helloar.ScanActivity">

    <android.opengl.GLSurfaceView
        android:id="@+id/surfacev"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/settings_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="25dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_settings" />

    <TextView
        android:id="@+id/textdeg"
        android:layout_width="270dp"
        android:layout_height="203dp"
        android:text="TextView"
        android:scrollbars = "vertical"/>

    <Button
        android:id="@+id/twodee"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="233dp"
        android:layout_marginTop="655dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="17dp"
        android:text="make layout" />

    <Button
        android:id="@+id/autoScanBtn"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="727dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="4dp"
        android:text="Auto Scan" />

    <ToggleButton
        android:id="@+id/ToggleButton"
        android:layout_width="121dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="277dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="514dp"
        android:background="@drawable/togglebtn_selector"
        android:text="ToggleButton" />

    <Button
        android:id="@+id/resolving"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="654dp"
        android:layout_marginEnd="227dp"
        android:layout_marginBottom="29dp"
        android:text="Resolve" />

    <EditText
        android:id="@+id/input_anchor"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="286dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="597dp"
        android:hint="input ID" />
</RelativeLayout>
